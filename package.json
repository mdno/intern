    "ws": "~2.3.1",
    "snyk": "^1.316.1"
  },
  "devDependencies": {
    "@dojo/loader": "~2.0.0-beta2.2",
    "@theintern/dev": "~0.4.3",
    "@types/chalk": "~0.4.31",
    "@types/glob": "~5.0.30",
    "@types/grunt": "~0.4.21",
    "@types/node": "~8.0.8",
    "@types/shelljs": "~0.7.2",
    "@types/sinon": "~2.3.2",
    "@types/systemjs": "~0.20.2",
    "@types/webpack": "~3.0.1",
    "ajv": "~5.2.0",
    "css-loader": "~0.28.4",
    "sinon": "~2.3.6",
    "style-loader": "~0.18.2",
    "stylus": "~0.54.5",
    "stylus-loader": "~3.0.1",
    "ts-node": "~3.2.0",
    "umd-compat-loader": "~2.1.0",
    "webpack": "~3.0.0"
  },
  "internDev": {
    "resources": {
      "_build": [
        "src/**/*.{styl,d.ts,html,js,png}",
        "src/**/!(tsconfig).json"
      ],
      "_build/src": [
        "types/**",
        "bin/**"
      ],
      "_tests": [
        "tests/**/*.{xml,d.ts,js}",
        "src/**/*.{styl,d.ts,html,js,png}"
      ]
    }
  },
  "snyk": true
